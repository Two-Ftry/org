{
  "baseDir": "/usr/release/log/",
  "appenders": [
    {
      "category": "console",
      "type": "console"
    },
    {
      "category": "logDebug",
      "type": "dateFile",
      "filename": "debug/logger-debug",
      "maxLogSize": 104800,
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncluePattern": true
    },
    {
      "category": "logInfo",
      "type": "dateFile",
      "filename": "info/logger-info",
      "maxLogSize": 104800,
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncluePattern": true
    },
    {
      "category": "logWarn",
      "type": "dateFile",
      "filename": "warn/logger-warn",
      "maxLogSize": 104800,
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncluePattern": true
    },
    {
      "category": "logError",
      "type": "dateFile",
      "filename": "error/logger-error",
      "maxLogSize": 104800,
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncluePattern": true
    }
  ],
  "replaceConsole": true,
  "levels":{
    "console": "ALL",
    "logDebug": "DEBUG",
    "logInfo": "INFO",
    "logWarn": "WARN",
    "logError": "ERROR"
  }
}
